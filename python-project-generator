#!/usr/bin/env python3
"""Local CLI wrapper for python-project-generator used during testing."""
import sys
from pathlib import Path

# Ensure local `src/` is importable when running this wrapper as a subprocess
ROOT = Path(__file__).resolve().parent
SRC = ROOT / "src"
sys.path.insert(0, str(SRC))

from python_project_generator.cli import main


if __name__ == "__main__":
    sys.exit(main())
